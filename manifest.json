{
  "manifest_version": 3,
  "name": "Auto Form Fill",
  "version": "2.0.0",
  "description": "Copy form data text, then auto-fill forms with double-click. Parses field:value pairs automatically.",
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Form Fill"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}