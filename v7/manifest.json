{
  "manifest_version": 3,
  "name": "Form Fill Helper v7 - Click to Copy",
  "version": "7.0.0",
  "description": "Click any field to copy its value - paste with Ctrl+V",
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}